function firstWords() {
  let word = '';

  for(const arg of arguments) { //모든 아규먼트의 하나씩 접근
    word = word.concat(arg[0]) //각 아규먼트의 첫 글자
    // word += arg[0] 와 동일한 기능
  }

  console.log(word);
}

firstWords('나만', '없어', '고양이');
firstWords('아니', '바나나말고', '라면먹어');
firstWords('만두', '반으로', '잘라먹네', '부지런하다');
firstWords('결국', '자바스크립트가', '해피한', '지름길');
firstWords('빨간색', '주황색', '노란색', '초록색', '파란색', '남색', '보라색');